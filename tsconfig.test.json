{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "jsx": "react-jsx",
    "sourceMap": true,
    "esModuleInterop": true,
    "allowJs": true,
    "moduleResolution": "node",
    "isolatedModules": true,
    "noEmit": true,
    "strict": true
  },
  "include": ["src", "__tests__"]
}
